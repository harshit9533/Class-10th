# Simple Calculator Without GUI
num = float(input("Enter first number: "))
NUM = float(input("Enter second number: "))
print(f"Addition: {num} + {NUM} = {num + NUM}")
print(f"Subtraction: {num} - {NUM} = {num - NUM}")
print(f"Multiplication: {num} * {NUM} = {num * NUM}")
print(f"Division: {num} / {NUM} = {num / NUM}")
